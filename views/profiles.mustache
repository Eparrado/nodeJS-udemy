<html>
    <head>
        <link rel="stylesheet" href="/css/bootstrap.css" type="text/css" />
    </head>
    <body class="container">
        <h1>Profiles:
        </h1>
        <ol>
            {{#profiles}}
                <li>
                    <a href="/profile/{{username}}">{{name}}</a></li>
            {{/profiles}}
        </ol>

        <form action="/addprofile" method="POST">
            <input type="text" name="name" placeholder="Name" /><br />
            <input type="text" name="username" placeholder="User Name" /><br />
            <input type="text" name="occupation" placeholder="Occupation" /><br />
            <input type="text" name="company" placeholder="Company" /><br />
            <input type="text" name="languages" placeholder="Languages" /><br />
            <input type="submit" value="Add a profile" />
        </form>
    </body>
</html>